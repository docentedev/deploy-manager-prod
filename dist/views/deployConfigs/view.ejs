<%- include('../partials/header.ejs', { title: 'Deploy Manager' }) %>

<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="card bg-dark border-secondary mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h1 class="h3 mb-0">Deploy Config: <%= config.name %></h1>
          <div>
            <a href="/deploy-configs/<%= config.id %>/action" class="btn btn-success me-2">
              <i class="bi bi-play-fill"></i> Run Deployment
            </a>
            <a href="/deploy-configs/<%= config.id %>/edit" class="btn btn-warning me-2">
              <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="/deploy-configs" class="btn btn-secondary">
              <i class="bi bi-arrow-left"></i> Back to List
            </a>
          </div>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">ID:</div>
            <div class="col-md-9"><%= config.id %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Key:</div>
            <div class="col-md-9"><%= config.key %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Name:</div>
            <div class="col-md-9"><%= config.name %></div>
          </div>
          
          <% if (config.description) { %>
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Description:</div>
            <div class="col-md-9"><%= config.description %></div>
          </div>
          <% } %>
          
          <% if (config.repository) { %>
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Repository:</div>
            <div class="col-md-9"><%= config.repository %></div>
          </div>
          <% } %>
          
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Base Directory:</div>
            <div class="col-md-9"><%= config.baseDir %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Script:</div>
            <div class="col-md-9">
              <pre class="bg-black text-light p-3 rounded border border-secondary" style="white-space: pre-wrap;"><%= config.script %></pre>
            </div>
          </div>
          
          <% if (config.createdAt) { %>
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Created:</div>
            <div class="col-md-9"><%= new Date(config.createdAt).toLocaleString() %></div>
          </div>
          <% } %>
          
          <% if (config.updatedAt) { %>
          <div class="row mb-3">
            <div class="col-md-3 fw-bold">Last Updated:</div>
            <div class="col-md-9"><%= new Date(config.updatedAt).toLocaleString() %></div>
          </div>
          <% } %>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <a href="/deploy-configs/<%= config.id %>/logs" class="btn btn-info">
              <i class="bi bi-journal-text"></i> View Logs
            </a>
            <a href="/deploy-configs/<%= config.id %>/action" class="btn btn-success">
              <i class="bi bi-play-fill"></i> Run Deployment
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>